<%- layout("layouts/boilerplate") %>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        text-align: center;
        align-items: center;
    }
    .filter{
        margin-right: 2.5rem;
        margin-top: 1.8rem;
        opacity: .7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: .87rem;
    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        height: 3rem;
        border-radius: 1rem;
        padding: .5rem;
        margin-left: 3rem;
        display: flex;
        align-items: center;
        margin-top: 1rem;
    }
</style>

    <div id="filters">
        <div class=" filter">
            <a href="/listings/filter/trending" style="color:inherit; text-decoration: none; ">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/rooms" style="color:inherit; text-decoration: none; ">
            <div><i class="Rooms fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/iconic-cities" style="color:inherit; text-decoration: none; ">
            <div><i class="Iconic fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/mountains" style="color:inherit; text-decoration: none; ">
            <div><i class="Mountians fa-solid fa-mountain"></i></div>
            <p>Mountians</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/castles" style="color:inherit; text-decoration: none; ">
            <div><i class="Castles fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/arctic" style="color:inherit; text-decoration: none; ">
            <div><i class="Arctic fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/camping" style="color:inherit; text-decoration: none; ">
            <div><i class="Camping fa-solid fa-campground"></i></div>
        </a>
            <p>Camping</p>
        </div>
        <div class=" filter">
            <a href="/listings/filter/farms" style="color:inherit; text-decoration: none; ">
            <div><i class="Farms fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/domes" style="color:inherit; text-decoration: none; ">
            <div><i class="Domes fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/boats" style="color:inherit; text-decoration: none; ">
            <div><i class="Boats fa-solid fa-sailboat"></i></div>
            <p>Boats</p>
        </a>
        </div>
        <div class=" filter">
            <a href="/listings/filter/beaches" style="color:inherit; text-decoration: none; ">
            <div><i class="Beaches fa-solid fa-umbrella-beach"></i></div>
            <p>Beaches</p>
            </a>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <% for(listing of allListings) { %>
           
            <div class="col-lg-4 col-md-6 col-sm-12"> <!-- Display 3 cards in lg, 2 in md, 1 in sm -->
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="card mb-3 listing-card">
                        <img class="card-img-top" src="<%=listing.image.url%>" alt="listing-img" style="height: 320px;">
                        <div class="card-body">
                            <p class="card-text"><b><%=listing.title%></b><br>
                            &#x20B9;<%= listing.price.toLocaleString("en-IN") %>/night
                            <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>    
   

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let infos = document.getElementsByClassName("tax-info");
            for(info of infos){
                if(info.style.display != "inline"){
                info.style.display= "inline";
                }else{
                    info.style.display = "none";
                }
        }
        })
    </script>




