<%- layout ("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card listing-card">
                <img src="<%=listing.image.url%>" class="card-img-top show-img mb-3"
                    alt="<%= listing.image.filename %>">
                <div class="card-body">
                    <h5 class="card-title offset-4"><%=listing.title%></h5><br>
                    <p class="card-text"><%=listing.description%><br><br>
                        &#8377 <%= listing.price.toLocaleString("en-IN") %><br><br>
                        <%= listing.location%> , <%= listing.country%></p>
                </div>
            </div>
            <div class="listing-btn">
                <button class="btn mb-5"> <a href="/listing/update/<%= listing.id %>">Update</a></button>
                <button class="btn mb-5"> <a href="/listing/delete/<%= listing.id %>">Delete</a></button>
            </div>
        </div>
    </div>
    <%- include("../listings/review.ejs") %>
</body>